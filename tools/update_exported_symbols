#!/bin/bash
PROJ_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )/.."

for CHANGE in $( cat "$PROJ_DIR/exported_symbols.txt" ); do
  if [[ ${CHANGE:0:1} == "_" ]] ; then
    NEW="_Ta${CHANGE:3}"
  else
    NEW="Ta${CHANGE:2}"
  fi
  find $PROJ_DIR -type f -name '*.h' -or -name '*.c' | xargs -n 1 sed -i '' "s/$CHANGE/$NEW/"
done
